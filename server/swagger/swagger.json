    "Otp": {
      "required": [
        "_id",
        "otp",
        "phone"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "otp": {
          "type": "string"
        }
        ,
        "phone": {
          "type": "string"
        }
        
      }
